        #id: converter_label
        #text: "File Converter"
        #font_size: 17
        #bold:True
    SpacingLayout:
    BoxLayout:
        size_hint: 1,0.07
        spacing: self.width / 1.20
        IconButton:
            icon: 'notification-clear-all'
            on_press: converter_list.clear_tree_view()
        IconButton:
            icon: "chart-bar"
    BoxLayout:
        size_hint:1,None
        height: 20
        Label:
            text: "Name"
            size_hint: None,1
            width: 50
        FloatLayout:
        Label:
            size_hint: None,1
            width: 60
            text: "Size"
        FloatLayout:
            size_hint: None,1
            width: 1
        Label:
            size_hint: None,1
