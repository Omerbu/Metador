                    text: "Convert to:"
                    size_hint: 0.4, 1
                Label:
                    id: filter_label
                    bold: True
                    text: "Format"
                    color: app.icon_color_rgba
            BoxLayout:
                TransparentButton:
                    text:"FLAC"
                    on_press: filter_label.text = self.text
                    on_release: converter_carousel.load_previous()
                TransparentButton:
                    text: "ALAC"
                    on_press: filter_label.text = self.text
                    on_release: converter_carousel.load_previous()
                TransparentButton:
                    text: "OGG"
                    on_press: filter_label.text = self.text
                    on_release: converter_carousel.load_previous()
                TransparentButton:
                    text: "WMA"
                    on_press: filter_label.text = self.text
                    on_release: converter_carousel.load_previous()
                TransparentButton:
                    text: "AIFF"
                    on_press: filter_label.text = self.text
                    on_release: converter_carousel.load_previous()
                TransparentButton:
                    text: "MP3"
                    on_press: filter_label.text = self.text
                    on_release: converter_carousel.load_previous()
    SpacingLayout:
    BoxLayout:
        spacing: 10
        size_hint: 1,None
        size: 0,30
        EditorTextInput:
            id: converter_text_input
            hint_text: "Destination Folder"
        IconButton:
            size_hint: 0.1,0.98
            icon: "folder"
            on_release: app.change_dest_folder()
    SpacingLayout:
    SpacedHoLine:
    SpacingLayout:
    BoxLayout:
        spacing: self.width / 10
        size_hint: 1,None
        size: 0,36
        FlatButton:
            size_hint: 1,None
            height: 36
            text: "%s  Convert"%(icon.icon("fa-check",16,self.icon_color))


