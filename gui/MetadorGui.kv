#:kivy 1.9.1

<TextInput>:
    multiline: False

<FolderLabel>:
    text_size: root.width, None
    mipmap: True
    padding_y: 4
    bold: True
    size:self.texture_size
    canvas:
        Rectangle:
            texture:root.folder_icon.texture
            pos: root.pos[0] -35, root.center_y -7
            size: (15, 15)
<FileLabel>:
    text_size: root.width, None
    mipmap: True
    bold: True
    padding_y: 5
    size:self.texture_size
    canvas:
        Rectangle:
            texture:root.file_icon.texture
            pos: root.pos[0] -25, root.center_y -7
            size: (15, 15)

<EditorLabel>:
    bold:True

<LeftLayout>:
    orientation:"vertical"
    BoxLayout:
        id:tree_button_layout
        size_hint: 1, 0.05
        Button:
            text:"Change Directory"
            on_press: app.drag_modal.open()
        ProgressSpinner:
            id: tree_progress
            auto_start: False
            speed:2
        Button:
            text:"Refresh"
            on_press: app.tree_refresh()


<TagEditorLayout>:
    orientation: "vertical"
    size_hint: 1.2, 1
    BoxLayout:
        size_hint_y: 4.5
        EditorLabel:
            id: lbl_file
            text: "File Name"
            text_size: self.size
            padding_x: 5
            valign: "middle"
        Image:
            size_hint: 0.4, 1
            source:"C:\Users\Master\Pictures\icons\music_icon_3.png"
    EditorLabel:
        id: lbl_title
        text: "Title:"
    TextInput:
        id: InputTitle
    EditorLabel:
        id: label_artist
        text: "Artist:"
    TextInput:
        id: InputArtist
    EditorLabel:
        id: lbl_tracknumber
        text: "Track Number:"
    TextInput:
        id: InputTracknumber
        input_filter: "int"
    EditorLabel:
        id: lbl_album
        text: "Album:"
    TextInput:
        id: InputAlbum
    EditorLabel:
        id: lbl_date
        text: "Release Date:"
    TextInput:
        id: InputDate
    EditorLabel:
        id: lbl_genre
        text: "Genre:"
    TextInput:
        id: InputGenre
    EditorLabel:
        id: lbl_album_artist
        text: "Album Artist:"
    TextInput:
        id: InputAlbumartist
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Metador This!"
            on_press:
        Button:
            text: "Apply Changes"
            on_press: root.print_text_input()


<TreeCarousel>:
    direction: "left"
    anim_move_duration: 0.2
    loop:True
    scroll_timeout: -1

<DragModal>:
    opacity: 1
    pos_hint: {"x" : 0, "y": 0.07 }
    size_hint: (0.46, 0.89)
    Label:
        opacity: 1
        text:"Drag Here Your Destination Folder"

<BottomLayout>:
    size_hint: 1,0.1
    Carousel:
        id:carousel_id
        scroll_timeout: -1
        Button:
            id: btn1
            size_hint: 0.15, 0.7
            pos_hint: {"y" : (1- self.size_hint[1]) / 2,"x": (1- self.size_hint[0]) /2}
            text: "Metador Me!"
            on_press:carousel_id.load_next()
        ProgressBar: