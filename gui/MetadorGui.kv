#:kivy 1.9.1


<Button>:
    markup: True

<TextInput>:
    multiline: False
    use_bubble: True


<FolderLabel>:
    text_size: root.width, None
    mipmap: True
    padding_y: 4
    bold: True
    size:self.texture_size
    canvas:
        Rectangle:
            texture:root.folder_icon.texture
            pos: root.pos[0] -35, root.center_y -7
            size: (15, 15)

<FileLabel>:
    text_size: root.width, None
    mipmap: True
    bold: True
    padding_y: 5
    size:self.texture_size
    canvas:
        Rectangle:
            texture:root.file_icon.texture
            pos: root.pos[0] -20, root.center_y -7
            size: (15, 15)

<EditorLabel>:
    bold:True

<LeftLayout>:
    orientation:"vertical"
    BoxLayout:
        id:tree_button_layout
        size_hint: 1, 0.05
        Button:
            text:"Change Directory"
            on_press: app.drag_modal.open()
        ProgressSpinner:
            id: tree_progress
            auto_start: False
            speed:2
        Button:
            text:"Refresh"
            on_press: app.tree_refresh()


<TagEditorLayout>:
    orientation: "vertical"
    size_hint: 1, 1
    BoxLayout:
        size_hint_y: 4.5
        EditorLabel:
            id: lbl_file
            text: "File Name"
            text_size: self.size
            padding_x: 5
            valign: "middle"
        Image:
            size_hint: 0.4, 1
            source:"C:\Users\Master\Pictures\icons\music_icon_3.png"
    EditorLabel:
        id: lbl_title
        text: "Title:"
    TextInput:
        id: InputTitle
    EditorLabel:
        id: label_artist
        text: "Artist:"
    TextInput:
        id: InputArtist
    EditorLabel:
        id: lbl_tracknumber
        text: "Track Number:"
    TextInput:
        id: InputTracknumber
        input_filter: "int"
    EditorLabel:
        id: lbl_album
        text: "Album:"
    TextInput:
        id: InputAlbum
    EditorLabel:
        id: lbl_date
        text: "Release Date:"
    TextInput:
        id: InputDate
    EditorLabel:
        id: lbl_genre
        text: "Genre:"
    TextInput:
        id: InputGenre
    EditorLabel:
        id: lbl_album_artist
        text: "Album Artist:"
    TextInput:
        id: InputAlbumartist
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Metador This!"
            on_press:app.bottom_layout.ids.metador_progress_bar.value +=10
        Button:
            text: "[b][color=ffffff]Apply Changes[/color][/b]"
            background_normal: ""
            background_down: "atlas://data/images/defaulttheme/button_pressed"
            background_color:(0.75,0,0,1)
            on_press: root.print_text_input()
            markup: True

<ConverterLayout>:
    orientation: "vertical"
    Label:
        size_hint:1,0.07
        id: converter_label
        text: "Music Converter"
    BoxLayout:
        size_hint: 1,0.06
        Label:
            text: "Convert to:"
            size_hint: 0.4, 1
        Spinner:
            text: "File Format"
            values: ("FLAC", "ALAC", "MP3", "OGG")

    ListView:
        id: converter_list_view
        adapter: app.converter_list_adapter
    BoxLayout:
        size_hint: 1,0.1
        Label:
            size_hint: 0.4,1
            text: "Output Folder:"
            canvas.before:
                Color:
                    rgba: 1,0,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            text: "Debug"
            shorten: True
    BoxLayout:
        size_hint: 1, 0.067
        Button:
            text: "Change Output Folder"
        Button:
            text: "Convert"




<DragModal>:
    opacity: 1
    pos_hint: {"x" : 0.05, "y": 0.45 }
    size_hint: (0.35, 0.1)
    Label:
        opacity: 1
        text:"Drag Here Your Destination Folder"

<BottomLayout>:
    size_hint: 1, 0.08
    Carousel:
        id:carousel_id
        scroll_timeout: 200
        Button:
            id: btn1
            size_hint: 0.15, 0.7
            pos_hint: {"y" : (1- self.size_hint[1]) / 2,"x": (1- self.size_hint[0]) /2}
            text: "Metador Me!"
            on_press:carousel_id.load_next()
        ProgressBar:
            id: metador_progress_bar